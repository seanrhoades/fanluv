<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @fan.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @fan.email %>
</p>
<p>
  <strong>Image:</strong>
  <%= image_tag @fan.image_url %>
</p>

<% if current_fan == @fan %>
<td><%= link_to 'Edit', edit_fan_path(@fan) %></td>
<td><%= link_to 'Delete', @fan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
<% end %>

<%= link_to 'Back', fans_path %>
